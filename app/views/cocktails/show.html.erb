<h1><%= @cocktail.name %></h1>

<% if @cocktail.photo.attached? %>
  <img src="<%= url_for cocktail.photo %>" class="show-image" alt="">
<% else %>
  <img src="https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=986&q=80" class="show-image" alt="">
<% end %>

<p>Ingredients:</p>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name.capitalize %> (<%= dose.description %>) <%= link_to "Remove", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></li>
  <% end %>
</ul>

<%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>

<%= link_to 'Delete', cocktail_path, method: :delete, data: { confirm: 'Are you sure?' } %>

<%= link_to "Back to cocktails", cocktails_path %>
