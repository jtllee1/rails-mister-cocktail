<%= simple_form_for [@cocktail, @ingredient, @dose] do |f| %>

  <div class="form-inputs">
    <%= f.association :ingredient %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to "Back to cocktail", cocktail_path(@cocktail)  %>
